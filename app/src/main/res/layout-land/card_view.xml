<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/film_info_image_cover_layout_width"
        android:layout_height="@dimen/film_info_image_cover_layout_height"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/film_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:id="@+id/card_Image"
                android:layout_width="@dimen/film_info_image_cover_layout_width"
                android:layout_height="@dimen/film_info_image_cover_layout_height"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/error_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/card_Image"
                android:text="@string/error_image_url_load"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#7000"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:id="@+id/localized_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#CCC"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>