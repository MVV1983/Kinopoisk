<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        tools:context=".view.FilmInfoFragment">


    <ImageView
            android:id="@+id/film_cover"
            android:layout_width="@dimen/film_info_image_cover_layout_width"
            android:layout_height="@dimen/film_info_image_cover_layout_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:contentDescription="@string/film_cover_description"/>
    <TextView
            android:id="@+id/film_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/film_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="start"
            android:layout_marginEnd="@dimen/film_info_text_margin_end"
            android:layout_marginTop="@dimen/film_info_text_margin_top"
            android:layout_marginStart="@dimen/film_info_text_margin_start"
            android:textColor="#CCC"
    />
    <TextView
            android:id="@+id/film_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_name"
            app:layout_constraintLeft_toRightOf="@+id/film_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="start"
            android:text="@string/film_year"
            android:layout_marginEnd="@dimen/film_info_text_margin_end"
            android:layout_marginTop="@dimen/film_info_text_margin_top"
            android:layout_marginStart="@dimen/film_info_text_margin_start"
            android:textColor="#CCC"
    />
    <TextView
            android:id="@+id/film_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_year"
            app:layout_constraintLeft_toRightOf="@+id/film_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="start"
            android:text="@string/film_rating"
            android:layout_marginEnd="@dimen/film_info_text_margin_end"
            android:layout_marginTop="@dimen/film_info_text_margin_top"
            android:layout_marginStart="@dimen/film_info_text_margin_start"
            android:textColor="#CCC"
    />

    <TextView
            android:id="@+id/film_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/film_cover"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#CCC"
    />

</androidx.constraintlayout.widget.ConstraintLayout>